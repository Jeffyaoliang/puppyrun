/* pages/match-male/match-male.wxss */
.match-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #9b59b6 100%);
  padding-bottom: 40rpx;
}

.swiper-wrapper {
  height: calc(100vh - 120rpx);
  padding-top: 40rpx;
}

.candidate-swiper {
  width: 100%;
  height: 100%;
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
}

.candidate-card {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  position: relative;
  height: 100%;
}

/* 头像区域（80%面积） */
.avatar-section {
  width: 100%;
  height: 80%;
  overflow: hidden;
  position: relative;
  background: #f5f5f5;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 信息区域（20%面积） */
.info-section {
  width: 100%;
  height: 20%;
  padding: 12rpx 16rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.nickname {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-right: 8rpx;
}

.age {
  font-size: 22rpx;
  color: #666;
}

.asset-level {
  font-size: 20rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.match-score {
  font-size: 22rpx;
  color: #667eea;
  font-weight: 500;
}

.interests-row {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  margin-top: 4rpx;
}

.interest-tag {
  font-size: 18rpx;
  color: #999;
  background: #f5f5f5;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  line-height: 1.4;
}

/* 操作按钮 */
.card-actions {
  position: absolute;
  bottom: 90rpx;
  right: 12rpx;
  display: flex;
  gap: 8rpx;
  opacity: 0.8;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: none;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  opacity: 0.9;
}

.action-btn:active {
  opacity: 1;
  transform: scale(0.95);
}

.pass-btn {
  background: #fff;
  color: #ff4444;
}

.like-btn {
  background: #667eea;
  color: #fff;
}

/* 页码指示器 */
.page-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 0;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.5);
  transition: all 0.3s;
}

.indicator-dot.active {
  width: 24rpx;
  background: #667eea;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #fff;
  font-size: 32rpx;
}

.empty-state button {
  margin-top: 40rpx;
  background: #fff;
  color: #667eea;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
}

