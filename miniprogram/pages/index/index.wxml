<!--index.wxml-->
<view class="welcome-container">
  <!-- 顶部品牌区域 -->
  <view class="brand-header">
    <text class="brand-title">奶狗快跑</text>
    <text class="brand-subtitle">精准社交匹配</text>
  </view>

  <!-- 中央图形和消息区域 -->
  <view class="center-section">
    <!-- 装饰性圆形背景 -->
    <view class="decorative-circles">
      <view class="circle circle-1"></view>
      <view class="circle circle-2"></view>
      <view class="circle circle-3"></view>
      <view class="circle circle-4"></view>
    </view>
    
    <!-- 心形图标 -->
    <view class="heart-container">
      <!-- 渐变光晕 -->
      <view class="heart-glow"></view>
      <view class="heart-icon">❤</view>
      <!-- 星星装饰 -->
      <view class="sparkle sparkle-1">✨</view>
      <view class="sparkle sparkle-2">✨</view>
      <view class="sparkle sparkle-3">✨</view>
      <view class="sparkle sparkle-4">✨</view>
      <view class="sparkle sparkle-5">✨</view>
    </view>

    <!-- 主文案 -->
    <view class="main-message">
      <text class="message-title">遇见你喜欢的人</text>
      <text class="message-subtitle">个性推荐·精准匹配</text>
    </view>
  </view>

  <!-- 特色说明区域 -->
  <view class="features-section">
    <view class="feature-item">
      <view class="feature-icon">🎯</view>
      <text class="feature-text">精准匹配</text>
    </view>
    <view class="feature-item">
      <view class="feature-icon">🔒</view>
      <text class="feature-text">安全可靠</text>
    </view>
    <view class="feature-item">
      <view class="feature-icon">💝</view>
      <text class="feature-text">真诚交流</text>
    </view>
  </view>

  <!-- 底部登录按钮 -->
  <view class="action-section">
    <button wx:if="{{!isLoggedIn}}" class="login-btn" bindtap="wechatLogin">
      <text>微信快速登录</text>
    </button>
    <button wx:else class="login-btn" bindtap="startMatch">
      <text>开始匹配</text>
    </button>
  </view>
</view>