/* pages/activity/activity.wxss */
.activity-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.filter-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}

.tab-item.active {
  color: #667eea;
  font-weight: bold;
  position: relative;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

.activity-list {
  flex: 1;
  padding: 20rpx;
}

.activity-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cover {
  width: 100%;
  height: 300rpx;
}

.content {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info {
  display: flex;
  gap: 30rpx;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.count {
  font-size: 28rpx;
  color: #666;
}

.fee {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.fee.free {
  color: #4caf50;
}

.enroll-btn {
  width: 100%;
  height: 80rpx;
  background: #667eea;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.enroll-btn.disabled {
  background: #ccc;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
