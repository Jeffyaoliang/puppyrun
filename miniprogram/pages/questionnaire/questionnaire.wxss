/* pages/questionnaire/questionnaire.wxss */
.questionnaire-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.progress-bar {
  height: 8rpx;
  background: #e0e0e0;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: #667eea;
  transition: width 0.3s;
}

.progress-text {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.step-container {
  padding: 40rpx;
}

.step-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
}

.form-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.picker {
  font-size: 28rpx;
  color: #333;
}

.input {
  font-size: 28rpx;
  color: #333;
}

.options-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  overflow: visible;
  padding: 4rpx 0;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  overflow: visible;
  padding: 4rpx 0;
}

.option-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #e0e0e0;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  margin: 0;
}

.option-item.selected {
  background: linear-gradient(135deg, #FF69B4 0%, #FF1493 100%) !important;
  color: #fff !important;
  border-color: #FF69B4 !important;
  border-width: 2rpx !important;
  box-shadow: 0 12rpx 32rpx rgba(255, 105, 180, 0.5) !important;
  transform: translateY(-6rpx) !important;
  z-index: 10 !important;
}

.photos-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 30rpx;
}

.photos-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.photo-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.photo {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 0 10rpx;
}

.add-photo {
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.add-photo text:first-child {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  display: block;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.prev-btn,
.next-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.prev-btn {
  background: #f5f5f5;
  color: #666;
}

.next-btn {
  background: #667eea;
  color: #fff;
}
